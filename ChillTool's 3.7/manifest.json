{
  "manifest_version": 3,
  "name": "ChillTool's",
  "description": "Extension for uhmegle.com that enhances your privacy and adds cool features!",
  "version": "3.7",
  "icons": {
    "16": "logo/chilltools_16.png",
    "48": "logo/chilltools_48.png",
    "128": "logo/chilltools_128.png"
  },
  "permissions": [
    "https://uhmegle.com/*"
  ],
  "background": {
    "scripts": ["scripts/uhmegle.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://uhmegle.com/*"
      ],
      "js": ["inject.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["scripts/uhmegle.js", "scripts/antip.js"],
    "matches": ["https://uhmegle.com/*"]
  }],
  "browser_specific_settings": {
    "gecko": {
      "id": "info@chilltools.it"
    }
  }
}